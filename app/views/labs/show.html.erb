<div class="container">
<p>
  <strong>Name:</strong>
  <p>Room Number : <%= @lab.roomNumber %></p>
  <p> Lab ID : <%= @lab.id %> </p>
  <p> Lab Building: <%= @lab.building %> </p>
  <p> Num Computers Used: <%= @lab.numUsedComputers %> </p>
</p>


<% counter = 0 %>

<% @computers.each do |computer| %>
    <% if counter % 4 == 0 %>
      <div class="row">
    <% else %>
      <div class="col-md-4" style="text-align: center;">
      <% if computer.used? %>
        <i style="color: red;" class="fa fa-desktop fa-5x"></i>
      <% else %>
         <i style="color: green;" class="fa fa-desktop fa-5x"></i>
      <% end %>
        <br>

       <%= "      " + computer.name%> 
        </div>
    <% end %>
    <% if counter % 4 == 0 && counter != 0%>
      </div>
    <% end %>
    
  <% counter += 1 %>
  <% end %>

  <%= link_to 'Back', buildings_path%>
</div>